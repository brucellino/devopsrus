{
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "eu-west-1",
      "source_ami": "ami-0204cddbf060b2420",
      "instance_type": "t2.micro",
      "ssh_username": "ubuntu",
      "ami_name": "jenkins_AMI {{timestamp}}",
      "ami_description": "The Jenkins base",
      "associate_public_ip_address": true
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sudo apt-get -qq update && sudo apt-get -qq install -y python",
        "sudo apt-get -qq install -y python-pip python-dev",
        "sudo pip install ansible"
      ]
    },
    {
      "type": "ansible-local",
      "playbook_file": "playbook.yml",
      "extra_arguments": "-e slack_token={{ user `slack_token` }}",
      "galaxy_file": "requirements.yml"
    }
  ]
}